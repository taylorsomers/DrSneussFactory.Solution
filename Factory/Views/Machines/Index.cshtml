@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>;

<h1>Machines in Operation:</h1>

@if(@Model.Count == 0)
{
  <h3>No machines have been entered into the database.</h3>
}
else
{
  <ul>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a New Machine", "Create")</p>