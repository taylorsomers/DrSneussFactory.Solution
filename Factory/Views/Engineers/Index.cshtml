@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Engineer>

<h1>All Engineers:</h1>

@if(@Model.Count == 0)
{
  <h3>No engineers have been entered into the database.</h3>
}
else
{
  <ul>
    @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
    }
  </ul>  
}

<p>@Html.ActionLink("Add a New Engineer", "Create")</p>